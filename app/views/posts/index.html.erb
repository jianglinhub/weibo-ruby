<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <!-- 手动定义固定链接
    <%= link_to 'id为1的文章', {:controller => 'posts', :action => 'show', :id => 1} %>
    -->
    <!-- 使用命名路由
    <%= link_to 'id为1的文章', show_post_path(1) %>
    -->
  </tbody>
</table>

<br>

